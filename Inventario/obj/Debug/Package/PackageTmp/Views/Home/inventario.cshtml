        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            <h3 class="modal-title text-center">Editar Inventario</h3>
        </div>
        <div class="modal-body">
            <div class="row">
           
                @*STOCK DISPONIBLE *@
                <div class="col-md-10 col-md-offset-1">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    Equipo Disponible
                                </div>
                                <div class="row" style="margin:10px;">
                                    <table data-toggle="table" data-search="true" data-toolbar="#toolbar"
                                           data-show-refresh="true"
                                           data-show-toggle="true"
                                           data-show-columns="true"
                                           data-show-export="true"
                                           data-minimum-count-columns="2"
                                           data-show-pagination-switch="true"
                                           data-pagination="true"
                                           data-id-field="id"
                                           data-page-list="[10, 25, 50, 100, ALL]"
                                           data-show-footer="false">
                                        <thead>
                                            <tr>
                                                <th data-sortable="true" class="text-center">TIPO</th>
                                                <th data-sortable="true" class="text-center">MARCA</th>
                                                <th data-sortable="true" class="text-center">MODELO</th>
                                                <th data-sortable="true" class="text-center">SERIE</th>
                                                <th data-sortable="true" class="text-center">ACCIONES</th>

                                            </tr>
                                        </thead>
                                        <tbody class="text-center">

                                            @foreach (var item in Model.listaHardware)
                                            {


                                                if (item.TypeHardware.Description != "Desktop" && item.TypeHardware.Description != "Laptop" && item.TypeHardware.Description != "Touch" && item.SerialAssigned == null)
                                                {
                                                    <tr>
                                                        <td data-sortable="true" class="text-center">@item.TypeHardware.Description</td>
                                                        <td data-sortable="true" class="text-center">@item.Brand.Name</td>
                                                        <td data-sortable="true" class="text-center">@item.Model</td>
                                                        <td data-sortable="true" class="text-center">@item.SerialNumber</td>
                                                        <td class="text-center">
                                                            <button type="button" class="btn btn-info" aria-label="Left Align">
                                                                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
                                                            </button>
                                                            <button type="button" class="btn btn-primary" @*style="margin-left:10px;"*@ aria-label="Left Align">
                                                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                                            </button>
                                                        </td>
                                                    </tr>

                                                }

                                            }

                                        </tbody>
                                    </table>


                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            <button type="button" class="btn btn-primary guardarCambios">Guardar Cambios</button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->


